<Window x:Class="T0_Do_List.CategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:T0_Do_List"
        mc:Ignorable="d"
        Title="CategoryWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock x:Name="Id" FontSize="20">ID:</TextBlock>
            <TextBox x:Name="IdTB" Margin="10" />
            <TextBlock x:Name="Name" FontSize="20">Name:</TextBlock>
            <TextBox x:Name="NameTB" Margin="10" />
            <StackPanel Margin="5">
                <Button x:Name="addbtn" Content="ADD CATEGORY" Click="addbtn_Click" Margin="5"/>
                <Button x:Name="deletebtn" Content="DELETE CATEGORY" Click="deletebtn_Click" Margin="5" IsEnabled="False"/>
            </StackPanel>
            <ListView x:Name="CategoryList" Margin="5">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}"/>
                        <GridViewColumn Header="NAME" Width="100" DisplayMemberBinding="{Binding Name}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Window>
