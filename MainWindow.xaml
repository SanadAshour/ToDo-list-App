<Window x:Class="T0_Do_List.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:T0_Do_List"
        mc:Ignorable="d"
        Title="MY TASKS" Height="700" Width="800">

    <Window.Resources>
        <!-- Styles for the buttons -->
        <Style TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="Beige" Offset="0.0"/>
                        <GradientStop Color="Black" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6"
                                Padding="16,4"
                                >
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#FF8A00" Offset="0.0"/>
                                <GradientStop Color="#FFBF00" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style for the ListView -->
        <Style TargetType="ListViewItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border Margin="5" Padding="10" CornerRadius="10" 
                                Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                            <ContentPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>


    <Grid>
        <StackPanel Margin="10">
            <TextBlock x:Name="TitleTB" FontSize="20">Title:</TextBlock>
            <TextBox x:Name="Title" Margin="10" />
            <TextBlock x:Name="DescriptionTB" FontSize="20">Description:</TextBlock>
            <TextBox x:Name="Description" Margin="10" />
            <TextBlock x:Name="Date" FontSize="20">Date:</TextBlock>
            <DatePicker x:Name="TaskDate" Margin="10" />
            <TextBlock x:Name="StateTB" FontSize="20">Status:</TextBlock>
            <ComboBox x:Name="State" Margin="10">
                <ComboBoxItem Content="Pending.."/>
                <ComboBoxItem Content="In Progress" />
                <ComboBoxItem Content="Completed" />
            </ComboBox>
            <TextBlock x:Name="CategoryTB" FontSize="20">Category:</TextBlock>
            <ComboBox x:Name="CategoryCB" Margin="10" DisplayMemberPath="Name" SelectedValuePath="id" >
            </ComboBox>
            <Button x:Name="ManageCategory" Margin="10" Width="180" Click="ManageCategory_Click">Manage Categories</Button>

            <Border Margin="10" Background="Gray" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="20" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="addbtn" Content="ADD TASK" Margin="5" Click="addbtn_Click"/>
                <Button x:Name="updatebtn" Content="UPDATE TASK" Margin="5" Click="updatebtn_Click" IsEnabled="False"/>
                <Button x:Name="deletebtn" Content="DELETE TASK" Margin="5" Click="deletebtn_Click" IsEnabled="False"/>
                <Button x:Name="clearBtn" Content="CLEAR FIELDS" Margin="5" Click="clearBtn_Click"/>
            </StackPanel>
            </Border>

            <ListView x:Name="TaskList"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  VerticalAlignment="Top"
                  Height="200"
                  SelectionChanged="TaskList_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="5" Padding="10" CornerRadius="10" Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Title}" FontWeight="Bold" Width="300"/>
                                <TextBlock Text="{Binding Description}" Width="200"/>
                                <TextBlock Text="{Binding TaskDate}" Width="120"/>
                                <TextBlock Text="{Binding Status}" Width="100"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>



        </StackPanel>
        
    </Grid>
</Window>
