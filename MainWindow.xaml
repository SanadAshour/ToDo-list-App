<Window x:Class="T0_Do_List.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:T0_Do_List"
        mc:Ignorable="d"
        Title="MY TASKS" Height="700" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock x:Name="TitleTB" FontSize="20">Title:</TextBlock>
            <TextBox x:Name="Title" Margin="10" />
            <TextBlock x:Name="DescriptionTB" FontSize="20">Description:</TextBlock>
            <TextBox x:Name="Description" Margin="10" />
            <TextBlock x:Name="Date" FontSize="20">Date:</TextBlock>
            <DatePicker x:Name="TaskDate" Margin="10" />
            <TextBlock x:Name="StateTB" FontSize="20">Status:</TextBlock>
            <ComboBox x:Name="State" Margin="10">
                <ComboBoxItem Content="Pending.."/>
                <ComboBoxItem Content="In Progress" />
                <ComboBoxItem Content="Completed" />
            </ComboBox>

            <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="addbtn" Content="ADD TASK" Margin="5" Click="addbtn_Click"/>
                <Button x:Name="updatebtn" Content="UPDATE TASK" Margin="5"/>
                <Button x:Name="deletebtn" Content="DELETE TASK" Margin="5"/>
            </StackPanel>

            <ListView x:Name="TaskList" >
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="TITLE" Width="60" DisplayMemberBinding="{Binding Title}" />
                        <GridViewColumn Header="DESCRIPTION" Width="100" DisplayMemberBinding="{Binding Description}" />
                        <GridViewColumn Header="DATE" Width="60" DisplayMemberBinding="{Binding TaskDate}" />
                        <GridViewColumn Header="STATE" Width="70" DisplayMemberBinding="{Binding Status}" />
                    </GridView>
                </ListView.View>
            </ListView>

        </StackPanel>
        
    </Grid>
</Window>
