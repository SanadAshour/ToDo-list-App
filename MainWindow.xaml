<Window x:Class="T0_Do_List.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:T0_Do_List"
        mc:Ignorable="d"
        Title="MY TASKS" Height="700" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock x:Name="TitleTB" FontSize="20">Title:</TextBlock>
            <TextBox x:Name="Title" Margin="10" />
            <TextBlock x:Name="DescriptionTB" FontSize="20">Description:</TextBlock>
            <TextBox x:Name="Description" Margin="10" />
            <TextBlock x:Name="Date" FontSize="20">Date:</TextBlock>
            <DatePicker x:Name="TaskDate" Margin="10" />
            <TextBlock x:Name="StateTB" FontSize="20">Status:</TextBlock>
            <ComboBox x:Name="State" Margin="10">
                <ComboBoxItem Content="Pending.."/>
                <ComboBoxItem Content="In Progress" />
                <ComboBoxItem Content="Completed" />
            </ComboBox>

            <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="addbtn" Content="ADD TASK" Margin="5" Click="addbtn_Click"/>
                <Button x:Name="updatebtn" Content="UPDATE TASK" Margin="5" Click="updatebtn_Click" IsEnabled="False"/>
                <Button x:Name="deletebtn" Content="DELETE TASK" Margin="5" Click="deletebtn_Click" IsEnabled="False"/>
                <Button x:Name="clearBtn" Content="CLEAR FIELDS" Margin="5" Click="clearBtn_Click"/>
            </StackPanel>

            <ListView x:Name="TaskList"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  VerticalAlignment="Top"
                  Height="400"
                  SelectionChanged="TaskList_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="5" Padding="10" CornerRadius="10" Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Title}" FontWeight="Bold" Width="300"/>
                                <TextBlock Text="{Binding Description}" Width="200"/>
                                <TextBlock Text="{Binding TaskDate}" Width="120"/>
                                <TextBlock Text="{Binding Status}" Width="100"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>



        </StackPanel>
        
    </Grid>
</Window>
